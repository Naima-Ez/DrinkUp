<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_drink_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_100ml"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/add_100ml"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_200ml"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/add_200ml"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_300ml"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/add_300ml"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_500ml"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/add_500ml"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/custom_amount"
        style="@style/Widget.Material3.Button.OutlinedButton"/>

</LinearLayout>